@{
    Layout = "";
}
@model Nop.Plugin.Payments.WeiXin.Models.PaymentInfoModel
@using Nop.Web.Framework;

<table width="100%" cellpadding="0" cellspacing="0">
    <tr>
        <td>
            <b>@T("Plugins.Payments.WeiXin.RedirectionTip")</b>
            @if (Model.CustomProperties.ContainsKey("QRCode"))
            {
                <div class="wexin-pay-qrcode">
                    <img src="@Model.CustomProperties["QRCode"]"/>
                </div>
            }
            
        </td>
    </tr>
</table>

